page{
  background-color: #7B8DA3
}

#roundSquareCard {
  border-radius: 25px 25px 0px 0px;
  background: #FDFAF5;
  padding: 3vh;
  height: 86vh;
}

#inLnButt{
  background-color: #fff;
  border: 0;
  padding:0;
  color: #7B8DA3;
}

.inputCell{
  margin: 5px;
  padding: 5px; 
  width: 70%;
  margin-right:0;
  font-size: 13pt;
  box-sizing: border-box;
  border: 2px solid #7B8DA3;
  border-radius: 8px;
  background-color: #fff;
  color: #28334d;
}

.inputBlock{
  display: flex;
  align-items: center;
}

#longText{
  margin: 5px;
  padding: 5px; 
  font-size: 13pt;
  border: 2px solid #7B8DA3;
  border-radius: 8px;
  background-color: #fff;
  color: #28334d;
  width: unset;
  height:30vh;
}

#longlongText{
  font-size: 13pt;
  border: 2px dashed #7B8DA3;
  border-radius: 8px;
  background-color: #fff;
  color: #28334d;
  width: unset;
  height: 30vh;
}

.submitbutt{
  width: 15vh;
  background-color: #7B8DA3;
  color: #FDFAF5;
  margin-right: 3vh;
  margin-top: 10vh;
}

#buttonLn{
  padding-top: 1.5vh;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

#buttonLnn{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-bottom: 1vh;
}

.recordButt{
  width: 20vh;
  background-color: #FDFAF5;
  color: #7B8DA3;
  margin-right: 1vh;
  border: 1px solid #7B8DA3;
  border-radius: 20px;
}

.butt{
  width: 15vh;
  background-color: #7B8DA3;
  color: #FDFAF5;
  margin-right: 1vh;
  margin-top: 1.5vh;
}